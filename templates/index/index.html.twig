{# templates/index/index.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Data</title>
    <!-- Add your CSS styles here -->
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
        .dashboard-btn {
            padding: 10px 20px;
            background-color: #8e44ad;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-bottom: 20px;
            text-underline-mode: false;
        }

        .dashboard-btn:hover {
            background-color: #9b59b6;
        }

        .a-tag-btn{
            padding: 10px 20px;
            background-color: #8e44ad;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-bottom: 20px;
            text-underline: #8e44ad;
        }
    </style>
</head>
<body style="background-color: aliceblue;">
<h2>Employee Data</h2>
<div class="button-container">
    <button class="a-tag-btn" onclick="window.location.href='{{ path('app_dashboard') }}'">Report Graphs</button>
    <a class="dashboard-btn">Finance Data</a>
    <button class="dashboard-btn" >HR Data</button>
    <button class="dashboard-btn" onclick="" >Human Resource Data</button>
    <button class="dashboard-btn" onclick="">IT Data</button>
    <button class="dashboard-btn" onclick="">Marketing Data</button>
    <button class="dashboard-btn" onclick="">Operations Data</button>
    <button class="dashboard-btn" onclick="">Sales Data</button>
</div>

<div class="button-container">
    <button class="dashboard-btn" onclick="window.location.href='{{ path('app_add_employee') }}'">Add Employee Data</button>
    <button class="dashboard-btn" onclick="window.location.href='{{ path('app_find_employee') }}'">Find Employee</button>

</div>
<table>
        <!-- Add your table headers here -->
    <tr>
        <th style="background-color: aquamarine;">Employee Name</th>
        <th style="background-color: aquamarine;">Employee ID</th>
        <th style="background-color: aquamarine;">Department Name</th>
        <th style="background-color: aquamarine;">Role</th>
        <th style="background-color: aquamarine;">Joining Date</th>
        <th style="background-color: aquamarine;">Monthly Salary</th>
        <th style="background-color: aquamarine;">Projects Completed</th>
        <th style="background-color: aquamarine;">Team Lead Name</th>
        <th style="background-color: aquamarine;">Number of Leaves Per Month</th>
        <th style="background-color: aquamarine;">Number of Official Leaves</th>
        <th style="background-color: aquamarine;">Allowed Leaves</th>
        <th style="background-color: aquamarine;">Unpaid Leaves</th>
        <th style="background-color: aquamarine;">Overtime Hours</th>
        <th style="background-color: aquamarine;">Home Address</th>
        <th style="background-color: aquamarine;">ID Card Number</th>
        <th style="background-color: aquamarine;">Residential City</th>
    </tr>
    {% for employee in employees %}
        <tr>
            <td>{{ employee.employeeName }}</td>
            <td>{{ employee.employeeID }}</td>
            <td>{{ employee.departmentName }}</td>
            <td>{{ employee.role }}</td>
            <td>{{ employee.joiningDate }}</td>
            <td>{{ employee.monthlySalary }}</td>
            <td>{{ employee.projectsCompleted }}</td>
            <td>{{ employee.teamLeadName }}</td>
            <td>{{ employee.numLeavesPerMonth }}</td>
            <td>{{ employee.numOfficialLeaves }}</td>
            <td>{{ employee.allowedLeaves }}</td>
            <td>{{ employee.unpaidLeaves }}</td>
            <td>{{ employee.overtimeHours }}</td>
            <td>{{ employee.homeAddress }}</td>
            <td>{{ employee.idCardNumber }}</td>
            <td>{{ employee.residentialCity }}</td>
            <!-- Add other table cells here -->
        </tr>
    {% endfor %}
</table>
</body>
</html>
